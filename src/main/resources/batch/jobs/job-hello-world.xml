<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:batch="http://www.springframework.org/schema/batch" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/batch
		http://www.springframework.org/schema/batch/spring-batch-2.2.xsd
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	">

	<import resource="../config/context.xml" />

	<bean id="itemProcessor" class="com.softility.dictionary.page.PageItemProcessor" />
	<bean id="pageContentFetcher" class="com.softility.dictionary.page.ItemsListPageContentProducer" ></bean>
	<bean id="writer" class="com.softility.dictionary.page.PageItemsWriter" ></bean>

	<batch:job id="dictionaryReader">
		<batch:step id="step1" next="step2">
			<tasklet>
				<chunk reader="pageContentFetcher" writer="writer" commit-interval="1" />
			</tasklet>
		</batch:step>
		<batch:step id="step2">
			<tasklet>
				<chunk reader="pageContentFetcher" writer="writer"
					   processor="itemProcessor" commit-interval="1" />
			</tasklet>
		</batch:step>
	</batch:job>



</beans>